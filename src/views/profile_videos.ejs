<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Videos</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <div class="container">
        <%- include('partials/sidebar', { sidebarAccounts: allAccounts, favoriteAccounts: favoriteAccounts }) %>
        <div class="main-content">
            <h1>Videos from <%= user.username %></h1>
            <p><a href="/profile/<%= user.username %>">Return to Profile</a></p>
            <div class="media-grid">
                <% videos.forEach(item => { %>
                    <div class="media-item">
                        <video controls src="<%= item.lien %>"></video>
                    </div>
                <% }); %>
            </div>
            <%- include('partials/pagination', { currentPage: currentPage, totalPages: totalPages }) %>
        </div>
    </div>
</body>
</html>