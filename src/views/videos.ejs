<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Videos</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <style>
        .tweet-media {
            margin-top: 15px;
            max-width: 100%;
            overflow: hidden;
            border-radius: 12px;
            background-color: #1a202c;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .tweet-media video {
            max-width: 100%;
            max-height: 80vh;
            border-radius: 8px;
            display: block;
            margin: 0 auto;
        }

        .fullscreen-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.95);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            padding: 20px;
            box-sizing: border-box;
        }

        .fullscreen-container video {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            background-color: #000;
        }

        .tweet-card {
            margin-bottom: 30px;
            transition: transform 0.2s;
        }

        .tweet-card:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('partials/sidebar', { activePage: 'videos', allAccounts: [], favoriteAccounts: [] }) %>
        <div class="main-content">
            <h1>Videos</h1>
            <div class="tweet-list">
                <% tweets.forEach(tweet => { %>
                    <div class="tweet-container">
                        <%- include('partials/tweetCard', { tweet: tweet, formatTweetText: formatTweetText, isLoggedIn: isLoggedIn, username: username }) %>
                    </div>
                <% }); %>
            </div>
            <%- include('partials/pagination', { currentPage: currentPage, totalPages: totalPages, baseUrl: '/videos' }) %>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const videos = document.querySelectorAll('video');
            let isFullscreen = false;
            let currentFullscreenVideo = null;

            const exitFullscreen = () => {
                if (document.fullscreenElement) {
                    document.exitFullscreen().catch(err => {
                        console.error("Error exiting fullscreen:", err);
                    });
                }
                if (currentFullscreenVideo) {
                    const video = currentFullscreenVideo.querySelector('video');
                    if (video) {
                        video.controls = false;
                        // Reset video when exiting fullscreen
                        video.pause();
                        video.currentTime = 0;
                    }
                    // Remove the fullscreen container from DOM
                    if (currentFullscreenVideo.parentNode) {
                        currentFullscreenVideo.parentNode.removeChild(currentFullscreenVideo);
                    }
                    isFullscreen = false;
                }
            };

            videos.forEach((video, index) => {
                // Get the parent media container
                const mediaContainer = video.closest('.tweet-media');
                
                // Add click to toggle fullscreen on the container
                mediaContainer.addEventListener('click', (e) => {
                    e.stopPropagation();
                    
                    if (isFullscreen) {
                        exitFullscreen();
                    } else {
                        // Create a new fullscreen container
                        const fullscreenContainer = document.createElement('div');
                        fullscreenContainer.className = 'fullscreen-container';
                        
                        // Clone the video and add it to the fullscreen container
                        const videoClone = video.cloneNode(true);
                        videoClone.controls = true;
                        fullscreenContainer.appendChild(videoClone);
                        
                        // Add to body and request fullscreen
                        document.body.appendChild(fullscreenContainer);
                        fullscreenContainer.requestFullscreen().catch(err => {
                            console.error("Fullscreen failed:", err);
                            document.body.removeChild(fullscreenContainer);
                        });
                        
                        currentFullscreenVideo = fullscreenContainer;
                        isFullscreen = true;
                        
                        // Play the video when entering fullscreen
                        videoClone.play().catch(err => {
                            console.error("Video playback failed:", err);
                        });
                    }
                });

                // When a video ends, play the next one if available
                video.addEventListener('ended', () => {
                    // Reset current video and exit fullscreen
                    const resetVideo = () => {
                        video.pause();
                        video.currentTime = 0;
                        
                        // Exit fullscreen if active
                        if (document.fullscreenElement) {
                            document.exitFullscreen().catch(err => {
                                console.error("Error exiting fullscreen:", err);
                            });
                        }
                        
                        // Remove fullscreen container if it exists
                        const fullscreenContainer = document.querySelector('.fullscreen-container');
                        if (fullscreenContainer && fullscreenContainer.parentNode) {
                            fullscreenContainer.parentNode.removeChild(fullscreenContainer);
                        }
                        
                        isFullscreen = false;
                        currentFullscreenVideo = null;
                    };
                    
                    // Reset after a short delay
                    setTimeout(resetVideo, 1000);
                    
                    if (index < videos.length - 1) {
                        // Play next video in current page
                        const nextVideo = videos[index + 1];
                        nextVideo.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        nextVideo.play().catch(err => {
                            console.error("Next video playback failed:", err);
                        });
                    } else {
                        // Try to go to next page if exists
                        const nextPageLink = document.querySelector('.pagination .next a');
                        if (nextPageLink) {
                            window.location.href = nextPageLink.href;
                        }
                    }
                });

                // Handle fullscreen change events
                video.addEventListener('fullscreenchange', () => {
                    if (!document.fullscreenElement) {
                        exitFullscreen();
                    }
                });

                // When a video starts playing, pause others
                video.addEventListener('play', (e) => {
                    if (video !== currentFullscreenVideo) {
                        videos.forEach(v => {
                            if (v !== video && !v.paused) {
                                v.pause();
                                v.currentTime = 0;
                            }
                        });
                    }
                });
            });

            // Close fullscreen when clicking outside the video
            document.addEventListener('click', (e) => {
                if (isFullscreen && !e.target.closest('video')) {
                    exitFullscreen();
                }
            });

            // Handle escape key to exit fullscreen
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && isFullscreen) {
                    exitFullscreen();
                }
            });
        });
    </script>
</body>
</html>