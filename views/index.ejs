<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Twitter UI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="d-flex flex-column h-100">
  <div class="container-fluid">
    <div class="row">
      <aside class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
        <div class="position-sticky pt-3">
          <h3 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Accounts</span>
          </h3></h3>
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/favorites">Favorite Tweets</a></li>
          <li class="nav-item"><a class="nav-link" href="/favorite_accounts_tweets">Favorite Accounts Tweets</a></li>
          <% allAccounts.forEach(account => { %>
            <li class="nav-item"><a class="nav-link" href="/profile/<%= account %>">@<%= account %></a></li>
          <% }); %>
        </ul>
      </aside>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <header class="p-3 border-bottom d-flex justify-content-between align-items-center">
          <h1 class="h2">Home</h1>
          <form class="d-flex" action="/search" method="GET">
            <input class="form-control me-2" type="search" placeholder="Search tweets and #hashtags" aria-label="Search" name="q">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </header>
        <div id="tweets-container" class="p-3">
          <% tweets.forEach(tweetData => { %>
            <%- include('_tweet', { tweetData: tweetData, buttonPartial: '_tweet_buttons' }) %>
          <% }); %>
        </div>
        <div class="pagination d-flex justify-content-center p-3">
          <% if (currentPage > 1) { %>
            <a href="/?page=<%= currentPage - 1 %>" class="btn btn-primary">Previous</a>
          <% } %>
          <span class="mx-3">Page <%= currentPage %> of <%= totalPages %></span>
          <% if (currentPage < totalPages) { %>
            <a href="/?page=<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
          <% } %>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
  <script src="/public/tweet_click.js"></script>
</body>
</html>