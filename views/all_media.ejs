<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Media</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container-fluid">
        <div class="row">
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <h1>All Media</h1>
                <div class="media-grid p-3">
                    <% media.forEach(item => { %>
                        <div class="media-item card">
                            <div class="card-body">
                                <% if (item.type === 'photo') { %>
                                    <a href="/tweet/<%= item.tweetId %>">
                                        <img src="<%= item.lien %>" alt="Media" class="media-thumbnail img-fluid">
                                    </a>
                                <% } else if (item.type === 'video') { %>
                                    <a href="/tweet/<%= item.tweetId %>">
                                        <video controls class="media-thumbnail w-100">
                                            <source src="<%= item.lien %>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </a>
                                <% } %>
                                <p class="card-text mt-2">From: <a href="/profile/<%= item.compte %>">@<%= item.compte %></a></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="pagination d-flex justify-content-center p-3">
                    <% if (currentPage > 1) { %>
                        <a href="/all_media?page=<%= currentPage - 1 %>" class="btn btn-primary">Previous</a>
                    <% } %>
                    <span class="mx-3">Page <%= currentPage %> of <%= totalPages %></span>
                    <% if (currentPage < totalPages) { %>
                        <a href="/all_media?page=<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
                    <% } %>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>