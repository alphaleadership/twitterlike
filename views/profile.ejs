<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="d-flex flex-column h-100">
 
  <%- include('partials/_profile_header_content', { user: user, pageTitle: user.name }) %>
  <div class="container-fluid">
    <div class="row d-flex">
      <aside class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
        <div class="position-sticky pt-3">
          <h3 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Most Retweeted Accounts</span>
          </h3>
        <% if (topRetweetedAccounts && topRetweetedAccounts.length > 0) { %>
          <ul class="nav flex-column">
            <% topRetweetedAccounts.forEach(account => { %>
              <li class="nav-item"><a class="nav-link" href="/profile/<%= account %>">@<%= account %></a></li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No retweets found for this user.</p>
        <% } %>
        <h3>Most Mentioned Accounts</h3>
        <% if (topMentionedAccounts && topMentionedAccounts.length > 0) { %>
          <ul class="nav flex-column">
            <% topMentionedAccounts.forEach(account => { %>
              <li class="nav-item"><a class="nav-link" href="/profile/<%= account.account %>">@<%= account.account %> <span class="badge bg-secondary"><%= account.count %></span></a></li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No mentions found for this user.</p>
        <% } %>
      </aside>
      <main class="col-md-9 col-lg-10 px-md-4 main-content">
        <div class="row">
          <div class="col-md-4">
          
           
          </div>
          <div class="col-md-8">
            <div class="tab-content" id="profileTabsContent">
              <div class="tab-pane fade show active" id="tweets" role="tabpanel" aria-labelledby="tweets-tab">
                <div id="tweets-container" class="p-3">
                  <% tweets.forEach(tweetData => { %>
                    <%- include('_tweet', { tweetData: tweetData, buttonPartial: '_profile_tweet_buttons' }) %>
                  <% }); %>
                </div>
                <div class="pagination d-flex justify-content-center p-3">
                  <% if (currentPage > 1) { %>
                    <a href="/profile/<%= user.username %>?page=<%= currentPage - 1 %>" class="btn btn-primary">Previous</a>
                  <% } %>
                  <span class="mx-3">Page <%= currentPage %> of <%= totalPages %></span>
                  <% if (currentPage < totalPages) { %>
                    <a href="/profile/<%= user.username %>?page=<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
                  <% } %>
                </div>
              </div>
             
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
  <script src="/public/tweet_click.js"></script>
</body>
</html>