<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tweet by <%= tweet.compte %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <main class="col-md-8 ms-sm-auto col-lg-10 px-md-4 main-content">
        
        <div id="tweet-detail-container" class="p-3">
          <div class="tweet card">
            <div class="card-body">
              <div class="d-flex align-items-center mb-2">
                <img src="https://unavatar.io/twitter/<%= tweet.compte %>" alt="avatar" class="tweet-avatar rounded-circle me-3">
                <div class="tweet-user">
                  <a href="/profile/<%= tweet.compte %>" class="text-white text-decoration-none">
                    <span class="name"><%= tweet.compte %></span>
                    <span class="username text-muted">@<%= tweet.compte %></span>
                  </a>
                  <%- include('_account_favorite_buttons', { tweet: tweet }) %>
                </div>
              </div>
              <p class="card-text"><%- formatTweetText(tweet.texte) %></p>
              <%- include('_tweet_favorite_buttons', { tweetData: tweet }) %>
              <% if (tweet.media && tweet.media.length > 0) { %>
                <div class="tweet-media mt-3">
                  <div class="row row-cols-<%= tweet.media.length > 1 ? 4 : 1 %> g-2 justify-content-center">
                    <% tweet.media.forEach(mediaItem => { %>
                      <div class="col">
                        <% if (mediaItem.type === 'photo') { %>
                          <img src="<%= mediaItem.lien %>" alt="tweet image" class="img-fluid rounded">
                        <% } else if (mediaItem.type === 'video') { %>
                          <video controls src="<%= mediaItem.lien %>" class="w-100 rounded"></video>
                        <% } %>
                      </div>
                    <% }); %>
                  </div>
                </div>
              <% } %>
              <% if (tweet.lien && tweet.lien.length > 0) { %>
                <div class="tweet-link mt-3">
                  <a href="<%= tweet.lien %>" target="_blank" class="btn btn-sm btn-outline-info">View original tweet</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>